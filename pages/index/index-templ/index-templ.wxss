.page-type7-view {
  width: 750rpx;
  height: 660rpx;
  margin-top: 2rpx;
  margin-bottom: 2rpx;
  display: flex;
  flex-direction: row; /*默认的方向*/
  flex-wrap: wrap; /*自动换行*/
  justify-content: center; /*水平方向居中对齐*/
}

.page-type4-view image {
  width: 100%;
  height: 300rpx;
}

.page-type5-view image {
  width: 100%;
  height: 85rpx;
}

.page-type6-view image {
  width: 100%;
