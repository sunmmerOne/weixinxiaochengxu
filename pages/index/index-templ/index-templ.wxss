}

.goods-view {
  width: 33%;
  height: 330rpx;
  background-color: white;
}

.goods-view image {
  width: 100%;
  height: 240rpx;
}

.goods-text {
  height: 80rpx;
  margin: 5rpx;
  position: relative;
}

.goods-name {
  font-size: 25rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-marketPrice {
  font-size: 22rpx;
  color: darkgray;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-decoration: line-through;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.goods-price {
  font-size: 23rpx;
  color: orange;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.addToCartImage {
  width: 40rpx;
  height: 40rpx;
  position: absolute; /*绝对布局 相对于最近已经定位的父视图定位*/
  right: 10rpx;
  bottom: 20rpx;
  display: flex;
  flex-direction: column-reverse;
  justify-content: flex-end;
}
