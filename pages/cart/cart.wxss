/* pages/cart/cart.wxss */
.cart-wrap {
  font-size: 30rpx;
  font-family: 微软雅黑;
  height: 100%;
}
.top-wrap {
  height: 90rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  position: fixed;
  top: 0;
  z-index: 99;
  background: white;
} 
.addr {
  width: 550rpx;
  float: left;
  color: #333;
  text-align: center;
  padding-left: 120rpx;
  line-height: 90rpx;
}
.top-wrap .add-img {
  width: 35rpx;
  height: 30rpx;
  float: left;
  margin-top: 30rpx;
}
.top-wrap .arrow {
  width: 30rpx;
  height: 30rpx;
}
.address {
    width: 250rpx;
    height: 90rpx;
    padding-left: 70rpx;    
    overflow: hidden;
    float: left;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.change-btn {
  height: 90rpx;
  width: 80rpx;
  line-height: 90rpx;
  float: right;
}
/*中间的配送时间部分*/
.send-time {
  position: fixed;
  top: 90rpx;
  width: 100%;
  z-index: 99;
  background: white;
}
.date-time {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
}
.date-time text {
  flex: 1;
  width: 25%;
  border-bottom: 1px solid #f2c0a5;
  text-align: center;
}
.date-time .current-time {
  color: #f96d16;
  border: 1px solid #f2c0a5;
  border-bottom: 1px solid #f1f0ee;
  background: #fef9f5;
}
.time-part {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fef9f5;
}
.time-part view {
  display: inline-flex;
  width: 25%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.time-part view text {
  height: 48rpx;
  width: 90%;
  margin: 0 auto;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
}
.current-time-part {
  background: #f2c0a4;
  border-radius: 48rpx;
  color: #f96d16;
  font-weight: bold;
}
.shadow-line {
  position: fixed;
  width: 100%;
  top: 250rpx;
  height: 20rpx;
  background: #f8f8f8;
  box-shadow: inset 0 6rpx 20rpx rgba(235, 235, 235, 0.8);
  z-index: 99;
}
/*购物车详情页部分*/
.cart-list-item {
  position: relative;
  width: 100%;
  top: 270rpx;
  box-sizing: border-box;
  /*background: #f8f8f8;*/
  padding-bottom: 308rpx;
}
.promotion-msg {
  width: 100%;
  color: #333;
  height: 80rpx;
  line-height: 85rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border-bottom: 1rpx solid #e6e6e6;
}
.promotion-msg .activity1 {
  color: #f96d16;
  padding: 4rpx 10rpx;
  border: 1rpx solid #f96d16;
  border-radius: 10rpx;
  vertical-align: initial;
  font-size: 26rpx;
  position: relative;
  top: -3rpx;
  left: 20rpx;
}
.promotion-msg .activity-say{
  margin-left: 40rpx;
}


.goods-content {
  width: 100%;
  height: 220rpx;
  font-size: 30rpx;
  color: #333;
  border-bottom: 1rpx solid #e6e6e6;
}
.check-btn {
  width: 60rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  float: left;
}
.circle {
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx red solid;
}
.goods-img {
  height: 220rpx;
  width: 220rpx;
  margin: 0 .2rem;
  float: left;
}
.goods-img image {
  width: 100%;
  height: 100%;
}
.shop-info {
  box-sizing: border-box;
  width: 416rpx;
  float: right;
  height: 220rpx;
  padding: 20rpx 0 0;
  overflow: hidden;
}
.s-title {
  width: 100%;
  height: 60rpx;  
  overflow: hidden;
  float: left;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 32rpx;
  font-size: 30rpx;
}
.price-coupon {
  color: #999;
  font-size: 24rpx;
  margin: 20rpx 0;
  height: 24rpx;
  line-height: 24rpx;
  padding-right: 20rpx;
}
.no-goods {
  float: right;
  color: #f96d16;
}
.price-wrap {
  width: 100%;
  float: left;
  margin-top: 36rpx;
}
.price-wrap view {
  display: inline-block;
}
.price {
   width: 217rpx;
   float: left;
   color: #F96D16;
}
.count-change {
  width: 155rpx;
  height: 50rpx;
  float: right;
  text-align: center;
  padding-right: 10rpx;  
}
.count-change view {
  float: left;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: #999;
  background: #f5f5f5
}
.decrease {
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
  text-align: right;
  font-size: 40rpx;
}
.add {
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  text-align: left;
  font-size: 40rpx;  
}

/*合计部分*/
.check-all {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 114rpx;
  z-index: 99;
  background: #fff;
  padding: 0;
  border-top: 1rpx solid #fad1b6;
  border-bottom: 1rpx solid #fad1b6;  
}
.select-all {
  width: 60rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  float: left;
}
.check-price {
  float: left;
  height: 114rpx;
  margin-left: 20rpx;
  padding: 16rpx 0;
  line-height: 42rpx;
}
.price-all {
  font-size: 36rpx;
  color: #f96d16;
}
.sendmsg {
  font-size: 26rpx;
  color: #999;
  line-height: 40rpx;
}
.go-checkout {
  background: rgb(249, 109, 22);
  height: 100%;
  width: 230rpx;
  float: right;
  line-height: 114rpx;
  color: #fff;
  font-size: 36rpx;
  background: #f96d16;
  text-align: center;
}