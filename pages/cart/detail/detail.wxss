/* pages/cart/detail/detail.wxss */
.detail-wrap {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  font-family: 微软雅黑;
}

.detail-contaner{
  margin-bottom:100rpx;
}
.top-banner {
  width: 100%;
  height: 600rpx;
}
.top-banner swiper {
  width: 100%;
  height: 100%;
}
.top-banner .slide-image {
  width:100%;
  height:100%;
}
.base-info {
  overflow: hidden;
  background: #fff;
  position: relative;
  min-height: 160rpx;
}
.goods-name {
  width: 80%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 32rpx;
  margin-top: 16rpx;
  margin-left: 24rpx;
}
.goods-price {
  padding-left: 35rpx;
  margin-top: 30rpx;
  padding-right: 23rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  float: left;
}
.now-price {
  font-size: 30rpx;
  color: #FE4200;
  margin-right: 16rpx;
}
.old-price {
  text-decoration: line-through;
  font-size: 26rpx;
  color: #A1A1A1;
}
.num-view {
  width: 155rpx;
  height: 50rpx;
  float: right;
  text-align: center;
  padding-right: 10rpx; 
  margin-top: 24rpx; 
}
.num-view view {
  float: left;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: #999;
  background: #f5f5f5
}
.decrease {
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
  text-align: right;
  font-size: 40rpx;
}
.add {
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  text-align: left;
  font-size: 40rpx;  
}

.goods-comment {
  padding-left: 35rpx;
  color: #F68135;
  height: 80rpx;
  font-size: 36rpx;
  line-height: 80rpx;
  border-top: 8rpx solid rgba(0, 0, 0, 0.1);
  border-bottom: 8rpx solid rgba(0, 0, 0, 0.1);
  /*box-shadow: 0 10rpx 0 #999;*/
}
.goods-comment image {
  width: 20rpx;
  height: 36rpx;
  float: right;
  margin-top: 24rpx;
  margin-right: 30rpx;
}
.goods-info {
  min-height: 204rpx;
}
.goods-info .info-text {
  color: #666666;
  word-break: break-all !important;
  word-wrap: break-word !important;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 36rpx;
}
.goods-cla {
  font-weight: bold;
}
.line-wrap {
  padding: 10rpx 40rpx;
}

/*图片展示*/
.img-intro {
  width: 100%;
}
.img-intro image {
  width: 100%;
}

.go-cart {
  position: fixed;
  bottom: 0rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  border-top: 1rpx solid #E4E4E4;
  background: #FFF;
}
.go-cart-content {
  width:100%;
  height:100%;
  position:relative;
}
.cart-count {
  height: 100%;
  position: absolute;
  left: 30rpx;
}
.cart-count image {
  width: 70rpx;
  position: absolute;
  top: 20rpx;
}
.cart-count .total-count {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  background: #ee7c1b;
  position: absolute;
  left: 36rpx;
  top:6rpx;
  text-align: center;
  line-height: 50rpx;
  color: #fff; 
}
.shop-cart {
  position: absolute;
  right: 0;
  background: rgb(249, 109, 22);
  height: 100%;
  width: 600rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 36rpx;
  background: #f96d16;
  text-align: center;
}